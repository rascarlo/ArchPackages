<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_arch_label_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/architecture"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_arch_hint_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/architecture_hint"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintEnd_toEndOf="@+id/search_arch_label_text_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/search_arch_label_text_view"
            app:layout_constraintTop_toBottomOf="@+id/search_arch_label_text_view" />

        <CheckBox
            android:id="@+id/search_check_box_arch_any"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/arch_any"
            app:layout_constraintEnd_toEndOf="@+id/search_arch_hint_text_view"
            app:layout_constraintStart_toStartOf="@+id/search_arch_hint_text_view"
            app:layout_constraintTop_toBottomOf="@+id/search_arch_hint_text_view" />

        <CheckBox
            android:id="@+id/search_check_box_arch_x86_64"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/arch_x86_64"
            app:layout_constraintEnd_toEndOf="@+id/search_check_box_arch_any"
            app:layout_constraintStart_toStartOf="@+id/search_check_box_arch_any"
            app:layout_constraintTop_toBottomOf="@id/search_check_box_arch_any" />

    </android.support.constraint.ConstraintLayout>

</layout>